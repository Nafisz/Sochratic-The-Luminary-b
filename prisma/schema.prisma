generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  email     String
  sessions  Session[]
}

model Session {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  user       User       @relation(fields: [userId], references: [id])
  userId     Int
  topic      Topic      @relation(fields: [topicId], references: [id])
  topicId    String
  expPoints  ExpPoint[]
}

model ExpPoint {
  id        Int      @id @default(autoincrement())
  element   String
  value     Int
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId Int
}

model Topic {
  id          String   @id @default(cuid())
  title       String
  emoji       String?
  description String
  content     String
  difficulty  String
  duration    String
  subject     String?
  stage       String
  themeType   String    // "Lesson" atau "Theme"
  problems    Problem[]
  createdAt   DateTime  @default(now())
  session     Session[]
}

model Problem {
  id             String   @id @default(cuid())
  text           String
  topicId        String
  firstQuestion  String
  topic          Topic    @relation(fields: [topicId], references: [id])
}
